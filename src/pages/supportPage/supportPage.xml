<!--支持微商页面-->
<!--背景轮播-->
<view class="carousel-wrap">
  <swiper class="carousel" autoplay="true" interval="5000" duration="1000" circular="true">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image mode="aspectFill" src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <!--用户信息-->
  <view class="user">
    <image class="user-img br" src="{{ user.img }}"></image>
    <!--用户名和微信号-->
    <view class="user-info">
      <text>{{ user.name }}</text>
      <text>微信号: {{ user.number }}</text>
    </view>
    <view class="user-btn">
      <text> 关联团队 </text>
      <text> 支持TA </text>
    </view>
    <!--数量bottom-->
    <view class="user-bottom">
      <view>
        <text>影响力</text>
        <text>{{ user.influence }}</text>
      </view>
      <view>
        <text>代理</text>
        <text>{{ user.agency }}</text>
      </view>
      <view>
        <text>支持度</text>
        <text>{{ user.support }}</text>
      </view>
    </view>
  </view>
</view>
<!--详细信息-->
<view class="detail-info">
  <view class="title">个人简历</view>
  <view>名称:{{ user.name }}</view>
  <view>微信号:{{ user.number }}</view>
  <view>现居地:{{ user.address }}</view>
  <view>个性签名:{{ user.sign }}</view>
  <view class="title">微商之路</view>
  <view>所属团队:{{ user.team }}</view>
  <view>代理级别:{{ user.level }}</view>
  <view>微商经历:{{ user.experience }}</view>
  <view class="title">代理产品</view>
  <view>产品名称:{{ user.product }}</view>
  <image catchtap="previewImg" data-index="{{ index }}" class="product-img" wx:for="{{ user.imageArr }}" src="{{ item }}"></image>
</view>
<!--底部tab栏-->
<view>
  <view class="">{{  }}</view>
</view>