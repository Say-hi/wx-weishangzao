<!--消息-->
<navigator catchtap="read" data-index="{{ index }}" data-id="{{ item.id }}" hover-class="none" url="{{ item.is_redirect == 1 ? ('../detail/detail?id=' + item.good_id) : '' }}" class="message" wx:for="{{ lists }}">
  <view>
    <image src="../../images/message-1.png"></image>
  </view>
  <view>
    <view class="m-t {{ item.is_read == 0 ? 'black' : '' }}">{{ item.content }}</view>
    <view class="m-t {{ item.is_read == 0 ? 'black' : '' }}">{{ item.add_time }}</view>
  </view>
</navigator>