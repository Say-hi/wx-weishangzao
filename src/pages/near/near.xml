<!--附近的人-->
<view class='near' wx:for="{{ nearArr }}">
    <image class='br' src='{{ item.img }}'></image>
    <view class='n-u'>
        <view>{{ item.name }}</view>
        <view>{{ item.sign }}</view>
    </view>
    <view class='n-w'>
        微信号: {{ item.wxnumber }}
    </view>
</view>
<view class="copy br" catchtap="copy">一键复制</view>