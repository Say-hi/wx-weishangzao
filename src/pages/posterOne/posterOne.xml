<!--一号海报模板-->
<!--全屏移动-->
<view class="wrap">
    <movable-area class="oneWrapOut">
        <movable-view class="oneWrap" direction="all" out-of-bounds="true">
            <image
                    bindtouchstart="touchStart"
                    bindtouchmove="touchMove"
                    bindtouchend="touchEnd"
                    catchtap="changePic"
                    style="width: 750rpx; height: 770rpx; transform: translate(-50%, -50%) scale({{ scaleOne }});"
                    data-type="one"
                    class="one"
                    mode="{{ mode }}"
                    src="{{ one }}">
            </image>
        </movable-view>
    </movable-area>
    <movable-area class="twoWrapOut">
        <movable-view class="twoWrap" direction="all" out-of-bounds="true">
            <image
                    bindtouchstart="touchStart"
                    bindtouchmove="touchMove"
                    bindtouchend="touchEnd"
                    catchtap="changePic"
                    style="width: 120rpx; height: 120rpx; transform: translate(-50%, -50%) scale({{ scaleTwo }});"
                    data-type="two"
                    class="two"
                    mode="{{ mode }}"
                    src="{{ one }}">
            </image>
        </movable-view>
    </movable-area>
    <image class="bg" src="../../images/1.png"></image>
</view>