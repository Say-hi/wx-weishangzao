<!--我的微商主页-->
<!--封面图片-->
<view class="cover" style="text-align: center;">
  <text>封面展示</text>
  <view class="cover-img-wrap">
    <view class="cover-img" wx:for="{{ coverImgArr }}">
      <image mode="aspectFill" src="{{ item }}"></image>
      <view data-index="{{ index }}" class="del">×</view>
    </view>
  </view>
  <image class="up-img" catchtap="upImg" src="{{ upimg }}"></image>
</view>
<!--个人信息-->
<view class="introduction">
  <view style="text-align: center;">
    <text>个人简介</text>
  </view>
  <view class="name">
    <view><view class="t">名称: </view><input class="name-input" /></view>
    <view><view class="t">微信号: </view><input class="wxn-input" /></view>
  </view>
  <view class="address">
    <view><view class="t">现居地: </view><input class="address-input" /></view>
  </view>
  <view class="sign">
    <view><view class="t">个性签名: </view><input class="sign-input" placeholder="20字内" maxlength="20" /></view>
  </view>
</view>
 <!--微商之路-->
<view class="introduction road">
  <view style="text-align: center;">
    <text>微商之路</text>
  </view>
  <view class="name">
    <view><view class="t">所属团队: </view><input class="name-input" /></view>
    <view><view class="t">代理级别: </view><input class="wxn-input" /></view>
  </view>
  <view class="address">
    <view><view class="t">微商之路: </view><input class="address-input" /></view>
  </view>
</view>
<!--代理产品-->
<view class="introduction product">
  <view style="text-align: center;">
    <text>代理产品</text>
  </view>
  <view class="address">
    <view><view class="t">产品名称: </view><input class="address-input" /></view>
  </view>
</view>
<!--封面图片-->
<view style="margin-top: 80rpx;" class="cover">
  <view class="cover-img-wrap">
    <view class="cover-img" wx:for="{{ productImgArr }}">
      <image mode="aspectFill" src="{{ item }}"></image>
      <view data-index="{{ index }}" class="del">×</view>
    </view>
  </view>
  <image style="margin: 20rpx 0; margin-bottom: 90rpx;" class="up-img2" catchtap="upImg" src="{{ upimg }}"></image>
</view>
<!--确定按钮-->
<view class="btn-wrap"><view class="confirm-btn">确定修改</view></view>